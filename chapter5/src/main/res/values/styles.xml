<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calculation">
        <item name="android:gravity">end</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calculationText</item>
        <item name="android:padding">16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="numberKeypad">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="backgroundTint">@color/numberButton</item>
    </style>

    <style name="operatorKeypad" parent="numberKeypad">
        <item name="backgroundTint">@color/operatorButton</item>
    </style>
</resources>