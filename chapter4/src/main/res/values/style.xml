<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title" >
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="layout_constraintStart_toStartOf">@id/titleGuideline</item>
    </style>

    <style name="body">
        <item name="android:gravity">start</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintStart_toStartOf">@id/bodyStartGuideline</item>
        <item name="layout_constraintEnd_toEndOf">@id/bodyEndGuideline</item>
    </style>

    <style name="floatingButton">
        <item name="android:importantForAccessibility">no</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">@id/bodyEndGuideline</item>
    </style>
</resources>